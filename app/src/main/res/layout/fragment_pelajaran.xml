<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/linearWeb"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_white"
                android:orientation="vertical">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/web_logo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Web Developer"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:fontFamily="@font/gotham"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearAndroid"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_white"
                android:orientation="vertical">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/android_logo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Android Developer"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:fontFamily="@font/gotham"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/linearDesktop"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_white"
                android:orientation="vertical">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dekstop_logo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Desktop Developer"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:fontFamily="@font/gotham"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearIos"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_white"
                android:orientation="vertical">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ios_logo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="IOS Developer"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:fontFamily="@font/gotham"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.airbnb.lottie.LottieAnimationView
                app:lottie_loop="true"
                app:lottie_fileName="frankeinstein.json"
                app:lottie_autoPlay="true"
                android:id="@+id/lottie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp">

            </com.airbnb.lottie.LottieAnimationView>
        </RelativeLayout>
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sabar...\nPage Pelajaran sedang dibuat"
            android:textSize="25sp"
            android:gravity="center|top"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:fontFamily="@font/gotham"/>
    </LinearLayout>
</FrameLayout>